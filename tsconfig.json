{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["lib/*"],
      "@/utils/*": ["utils/*"],
      "@/components/*": ["components/*"],
      "@/components/ui/*": ["components/ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/components/InventoryScrapRequest.js", "app/processes/orderEntry", "app/processes/customerSatisfaction", "app/documents/changeRequest", "app/actionItems/carPAR", "app/actionItems/continuousImprovement"],
  "exclude": ["node_modules"]
}
